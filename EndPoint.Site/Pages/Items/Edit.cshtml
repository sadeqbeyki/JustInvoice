@using Invoice.ApplicationContracts.Items
@model EditItem

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش گروه محصولی :‌@Model</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <div class="row">


            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">نام کالا</label>
                    <select class="form-control" asp-for="ProductId" 
                        asp-items='new SelectList(Model.Products, "Id", "Name")'>
                        <option value="">نام کالا</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="UnitId" class="control-label">واحد</label>
                    <select class="form-control" asp-for="UnitId" 
                        asp-items='new SelectList(Model.Units, "Id", "Name")'>
                        <option value="">نام واحد </option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Price" class="control-label">قیمت</label>
                    <input type="text" class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Count" class="control-label">تعداد</label>
                    <input type="text" class="form-control" asp-for="Count">
                    <span asp-validation-for="Count" class="error"></span>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="Id" value="@Model.Id"/>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>